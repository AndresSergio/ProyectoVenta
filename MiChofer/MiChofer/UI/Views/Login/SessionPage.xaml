<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiChofer.UI.Views.Login.SessionPage"
             BackgroundImage="Fondo.png" NavigationPage.HasNavigationBar="False"
             >

    <StackLayout  VerticalOptions="CenterAndExpand" Padding="40,0">
            
            <Image Margin="0,80" Source="ventalogo.png" WidthRequest="100" HeightRequest="100" />

            <Entry 
                        PlaceholderColor="#B1B2AA" FontSize="17"
                        Margin="0,15"                       
                        Placeholder="Correo electronico" 
                        Keyboard="Email"
                        HorizontalOptions="FillAndExpand"  HeightRequest="40"/>
            <Entry 
                        PlaceholderColor="#B1B2AA" FontSize="17"
                        Margin="0,15"
                        IsPassword="True"
                        Placeholder="Contraseña" 
                        HorizontalOptions="FillAndExpand"  HeightRequest="40"/>


        <Button Text="INICIAR SESIÓN" FontSize="13" BorderRadius="15" TextColor="White" BackgroundColor="#21958A" Margin="0,10" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"/>
        

            


    </StackLayout>

    

</ContentPage>